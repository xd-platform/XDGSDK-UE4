<?xml version="1.0" encoding="utf-8"?>
<root xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- init section is always evaluated once per architecture -->
    <init>
        <log text="XDSDK Payment Build init"/>
    </init>

    <!-- optional additions to proguard -->
    <proguardAdditions>
        <insert>
            -dontwarn com.xd.**
            -keep class com.xd.XDGPaymentUnreal4{
                *;
            }
        </insert>
    </proguardAdditions>

    <!-- optional files or directories to copy to Intermediate/Android/APK -->
   <resourceCopies>
        <copyDir src="$S(PluginDir)/../../Source/XDGPayment/Android/libs/" dst="$S(BuildDir)/libs/" />
        <copyDir src="$S(PluginDir)/../../Source/XDGPayment/Android/assets/" dst="$S(BuildDir)/assets/" />
        <copyDir src="$S(PluginDir)/../../Build/Android/src/" dst="$S(BuildDir)/src/com/xd/" />
    </resourceCopies>

    <buildGradleAdditions>
        <insert>
            dependencies { 
                implementation(name: 'XDGPayment_6.3.1',ext:'aar')
            }
        </insert>
    </buildGradleAdditions>

</root>